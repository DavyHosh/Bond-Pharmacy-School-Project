<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/head.ejs") %>
  </head>
  <body>
    <%- include ("partials/nav.ejs") %>

    <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-10">
            <h1><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users <small>Manage users</small></h1>
          </div>
        </div>
      </div>
    </header>

    <section id="breadcrumb">
      <div class="container">
        <ol class="breadcrumb">
          <li><a href="/admin/index">Dashboard</a></li>
          <li> > </li>
          <li class="active">Users</li>
        </ol>
      </div>
    </section>

    <section id="main">
      <div class="container">
        <div class="row">
          
          <%- include ("partials/sidebar.ejs") %>
          
          <div class="col-md-9">
            <!-- Website Overview-->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Users</h3>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class=" row col-md-12">
                    <div class="col-md-10">  <br> </div>
                    <div class="col-md-2" style="text-align: right;"> <a href="/admin/add_cashier"><input type="submit" class="btn btn-success" value="+ Add Cashier"></a> </div>
                  </div>
                </div>
                <br>
                <table class="table table-striped table-hover">
                        <tr>
                          <th>Name</th>
                          <th>Email</th>
                          <th>Phone</th>
                          <th>Role</th>
                          <th></th>
                        </tr>

                        <% allCustomers.forEach(function(item) { %>
                        <tr>
                          <td> <%= item.fname %> <%= item.lname %></td>
                          <td><a href="mailto:<%= item.username %>"><%= item.username %></a></td>
                          <td><a href="tel:+<%= item.phone %>"><%= item.phone %></a></td>
                          <td>Customer</td>
                          <td><a class="btn btn-danger" href="/admin/<%= item.id %>/delete_customer">Delete</a></td>
                        </tr>
                        <% }); %>

                        <% allSuppliers.forEach(function(item) { %>
                          <tr>
                            <td> <%= item.fname %> <%= item.lname %></td>
                            <td><a href="mailto:<%= item.username %>"><%= item.username %></a></td>
                            <td><a href="tel:+<%= item.phone %>"><%= item.phone %></a></td>
                            <td>Supplier</td>
                            <td><a class="btn btn-danger" href="/admin/<%= item.id %>/delete_supplier">Delete</a></td>
                          </tr>
                        <% }); %>

                        <% allCashiers.forEach(function(item) { %>
                          <tr>
                            <td> <%= item.fname %> <%= item.lname %></td>
                            <td><a href="mailto:<%= item.username %>"><%= item.username %></a></td>
                            <td><a href="tel:+<%= item.phone %>"><%= item.phone %></a></td>
                            <td>Cashier</td>
                            <td><a class="btn btn-danger" href="/admin/<%= item.id %>/delete_cashier">Delete</a></td>
                          </tr>
                        <% }); %>
                        
                      </table>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>

    <%- include ("partials/footer.ejs") %>

</div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    </body>
</html>
