<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/head.ejs") %>
  </head>
  <body>
    <%- include ("partials/nav.ejs") %>

    <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-10">
            <h1><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Inventory <small>Manage store products</small></h1>
          </div>
        </div>
      </div>
    </header>

    <section id="breadcrumb">
      <div class="container">
        <ol class="breadcrumb">
          <li><a href="/admin/index">Dashboard</a></li>
          <li>/</li>
          <li class="active">Inventory</li>
        </ol>
      </div>
    </section>

    <section id="main">
      <div class="container">
        <div class="row">
          
          <%- include ("partials/sidebar.ejs") %>
          
          <div class="col-md-9">
            <!-- Website Overview-->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Inventory</h3>
              </div>
              <div class="panel-body">
                <br>
                <table class="table table-striped table-hover">
                      <tr>
                        <th>Title</th>
                        <th>Quantity (kg) </th>
                        <th>Supplier</th>
                        <th>Expiry Date</th>
                        <th>Date Delivered</th>
                        <th>Action</th>
                      </tr>

                      <% allSales.forEach(function(item) { %>
                      <tr>
                        <td><%= item.title %></td>
                        <td><%= item.quantity %></td>
                        <td><%= item.supplier %></td>
                        <td><%= item.expiry_date %></td>
                        <td><%= item.date.toDateString() %></td>
                        <td><a class="btn btn-danger" href="/admin/<%= item.id %>/delete_delivery">Delete</a></td>
                      </tr>
                      <% }); %>

                </table>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>

    <%- include ("partials/footer.ejs") %>

</div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    </body>
</html>
