<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/head.ejs") %>
  </head>
  <body>
    <%- include ("partials/nav.ejs") %>

    <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-10">
            <h1><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Dashboard <small>Manage your site</small></h1>
          </div>
        </div>
      </div>
    </header>

    <section id="breadcrumb">
      <div class="container">
        <ol class="breadcrumb">
          <li class="active">Dashboard</li>
        </ol>
      </div>
    </section>

    <section id="main">
      <div class="container">
        <div class="row">
          
          <%- include ("partials/sidebar.ejs") %>
          
          <div class="col-md-9">
            <!-- Website Overview-->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Website Overview</h3>
              </div>
              <div class="panel-body">
                <div class="col-md-3">
                  <div class="well dash-box">
                    <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span> </h2>
                    <h4>Users</h4>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="well dash-box">
                    <h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> </h2>
                    <h4>Inventory</h4>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="well dash-box">
                    <h2><span class="glyphicon glyphicon-import" aria-hidden="true"></span></h2>
                    <h4>Purchases</h4>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="well dash-box">
                    <h2><span class="glyphicon glyphicon-export" aria-hidden="true"></span> </h2>
                    <h4>Sales</h4>
                  </div>
                </div>
              </div>
            </div>
            <!-- Latest Suppliers -->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Products</h3>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-hover">
                      <tr>
                        <th>Product</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Date uploaded</th>
                        <th>Edit</th>
                        <th>Delete</th>
                      </tr>

                      <% allProducts.forEach(function(item) { %>
                        <tr>
                          <td><img src="/uploads/<%= item.filename %>" alt="" width="100px" height="80px"></td>
                          <td><%= item.title %></td>
                          <td><%= item.price %></td>
                          <td><%= item.date.toDateString() %></td>
                          <td><a href="/admin/<%= item.id %>/edit_product"><input type="submit" class="btn btn-warning" value="Edit"></a></td>
                          <td><a href="/admin/<%= item.id %>/delete_product"><input type="submit" class="btn btn-danger" value="Delete"></a></td>
                        </tr>
                      <% }); %>
                    </table>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>

    <%- include ("partials/footer.ejs") %>

</div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>

</body>
</html>
